<ActualizarTransaccionScreen>

    GridLayout:
        cols: 1
        spacing: 20
        padding: [50, 50, 50, 50]

        Label:
            text: "Transacciones disponibles"
            font_size: 24
            halign: "center"
            valign: "top"
            size_hint_y: None
            text_size: self.width, None  # para que halign funcione
            height: self.texture_size[1] + 20  # para que ajuste el alto al texto


    BoxLayout:
        orientation: "vertical"
        spacing: 3
        padding: [300, 250, 300, 250]
        Spinner:
            id: transacciones_spinner
            text: "Selecciona una transacción"
            on_press: root.cargar_transacciones()

        Spinner:
            id: campo_spinner
            text: "Campo a actualizar"
            values: ["Cantidad de dinero", "Categoría", "Fecha", "Hora"]

        TextInput:
            id: nuevo_valor_input
            hint_text: "Ingrese el nuevo valor: "
            multiline: False

        Label:
            id: mensaje_label
            text: ""
            color: 0, 1, 0, 1


    BoxLayout:
        orientation: "horizontal"
        spacing: 50
        padding: [200, 60, 200, 150]
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        valign: "bottom"
        
        Button:
            text: "Continuar"
            size_hint: 0.06, 0.09
            pos_hint: {"center_x": 0.5}
            on_press: root.actualizar_transaccion()
        Button:
            text: "Volver"
            size_hint: 0.06, 0.09
            pos_hint: {"center_x": 0.5}
            on_press: root.volver()

        