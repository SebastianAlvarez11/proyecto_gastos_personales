<VisualizarTransaccionesScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [50, 50, 50, 50]

        Label:
            text: "Visualizar transacciones"
            font_size: 24
            halign: "center"
            valign: "top"
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1] + 20

    BoxLayout:
        orientation: "vertical"
        spacing: 3
        padding: [300, 300, 300, 300]

        Label:
            text: "Ingrese la fecha inicial (dd/mm/yyyy):"
        TextInput:
            id: fecha_inicial_input
            multiline: False

        Label:
            text: "Ingrese la fecha final (dd/mm/yyyy):"
        TextInput:
            id: fecha_final_input
            multiline: False

        Label:
            id: mensaje_label
            text: ""
            color: 0, 1, 0, 1

    BoxLayout:
        orientation: "horizontal"
        spacing: 50
        padding: [200, 60, 200, 150]
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        valign: "bottom"
        Button:
            text: "Continuar"
            size_hint: 0.06, 0.09
            pos_hint: {"center_x": 0.5}
            on_press: root.visualizar_transacciones()

        Button:
            text: "Volver"
            size_hint: 0.06, 0.09
            pos_hint: {"center_x": 0.5}
            on_press: root.volver()

    

    


    