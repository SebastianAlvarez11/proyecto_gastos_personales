<CrearCuentaScreen>

    GridLayout:
        cols: 1
        spacing: 20
        padding: [50, 50, 50, 50]  
    
        Label:
            text: "Crea una cuenta"
            font_size: 24
            halign: "center"
            valign: "top"
            size_hint_y: None
            text_size: self.width, None  # para que halign funcione
            height: self.texture_size[1] + 20  # para que ajuste el alto al texto

    BoxLayout:
        orientation: "vertical"
        spacing: 2
        padding: [300, 100, 300, 100]
        Label:
            text: "Nombre: "
        TextInput:
            id: nombre_input
            multiline: False
            on_text_validate: tipo_documento_input.focus = True

        Label:
            text: "Tipo de documento: "
        TextInput:
            id: tipo_documento_input    
            multiline: False
            on_text_validate: numero_de_documento_input.focus = True

        Label:
            text: "Número de documento: "
        TextInput:
            id: numero_de_documento_input           
            multiline: False
            on_text_validate: contrasena_input.focus = True

        Label:
            text: "Contraseña (Debe contener al menos un número, una letra mayúscula y una letra especial.): "
        TextInput:
            id: contrasena_input          
            multiline: False
            on_text_validate: correo_input.focus = True

        Label:
            text: "Correo: "
        TextInput:
            id: correo_input          
            multiline: False
            on_text_validate: fecha_nacimiento_input.focus = True

        Label:
            text: "Fecha de nacimiento (dd/mm/yyyy): "
        TextInput:
            id: fecha_nacimiento_input
            multiline: False
            


    BoxLayout:
        orientation: "horizontal"
        spacing: 50
        padding: [200, 50, 200, 20]
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        valign: "bottom"
        Button:
            text: "Registrarse"
            size_hint: 0.06, 0.09
            pos_hint: {"center_x": 0.5}
            on_press: root.crear_cuenta()
        Button:
            text: "Volver"
            size_hint: 0.06, 0.09
            pos_hint: {"center_x": 0.5}
            on_press: root.volver()