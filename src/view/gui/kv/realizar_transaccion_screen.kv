<RealizarTransaccionScreen>

    GridLayout:
        cols: 1
        spacing: 20
        padding: [50, 50, 50, 50]

        Label:
            text: "Crea una transacci√≥n"
            font_size: 24
            halign: "center"
            valign: "top"
            size_hint_y: None
            text_size: self.width, None  # para que halign funcione
            height: self.texture_size[1] + 20  # para que ajuste el alto al texto

    BoxLayout:
        orientation: "vertical"
        spacing: 2
        padding: [300, 100, 300, 100]
        Label:
            text: "Cantidad de dinero: "
        TextInput:
            id: cantidad_dinero_input
            multiline: False
        Label:
            text: "Categoria: "
        TextInput:
            id: categoria_input    
            multiline: False
        Label:
            text: "Fecha (dd/mm/yyyy): "
        TextInput:
            id: fecha_input    
            multiline: False
        Label:
            text: "Hora: "
        TextInput:
            id: hora_input    
            multiline: False

    
    BoxLayout:
        orientation: "horizontal"
        spacing: 50
        padding: [200, 50, 200, 20]
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        valign: "bottom"
        
        Button:
            text: "Continuar"
            size_hint: 0.06, 0.09
            pos_hint: {"center_x": 0.5}
            on_press: root.crear_transaccion()
        Button:
            text: "Volver"
            size_hint: 0.06, 0.09
            pos_hint: {"center_x": 0.5}
            on_press: root.volver()